{
  "name": "node-tdd-seed",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prestart": "ln -fs ../src node_modules",
    "start": "node --experimental-modules ./index.mjs",
    "pretest": "yarn prestart",
    "test": "eslint ./src/**/*.mjs && jest --coverage --collectCoverageFrom=src/**/*.mjs",
    "prewatch": "yarn prestart",
    "watch": "jest --watch --notify --coverage --collectCoverageFrom=src/**/*.mjs"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "es2015",
            {
              "modules": false
            }
          ]
        ],
        "plugins": [
          [
            "transform-es2015-modules-commonjs",
            {
              "spec": true
            }
          ]
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testMatch": [
      "**/?(*.)(spec|test).mjs"
    ],
    "transform": {
      "^.+\\.mjs$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "mjs"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.5",
    "prettier": "^1.15.2"
  }
}
